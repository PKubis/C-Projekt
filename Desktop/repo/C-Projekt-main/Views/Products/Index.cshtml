@model IEnumerable<_4Ballers.Models.Product>

<h2>Produkty</h2>

<table>
    <tr>
        <th>Obrazek</th>
        <th>Nazwa</th>
        <th>Marka</th>
        <th>Cena</th>
        <th></th>
    </tr>
    @foreach (var product in Model)
    {
        <tr>
            <td><img src="@Url.Content("~/images/" + product.ImageUrl)" alt="@product.Name" style="width:100px; height:100px;" /></td>
            <td>@product.Name</td>
            <td>@product.Brand</td>
            <td>@product.Price zł</td>
            <td>
                <a href="@Url.Action("Edit", "Products", new { id = product.Id })">Edytuj</a> |
                <a href="@Url.Action("Details", "Products", new { id = product.Id })">Szczegóły</a> |
                <a href="@Url.Action("Delete", "Products", new { id = product.Id })">Usuń</a>
            </td>
        </tr>
    }
</table>

<a href="@Url.Action("Create", "Products")">Dodaj nowy produkt</a>
